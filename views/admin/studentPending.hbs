<html>
  <head>
    <title>Student pending</title>
    <style>

    table{
      border-spacing: 0;
      width: 100%;
      margin-top: 20px;
      border-radius: 6px;
      overflow: hidden;
      box-shadow: 0 8px 20px rgba(0,0,0,0.1);
    }

    th, td {
      padding: 12px 15px;
      text-align: center;
    }

    th {
      background-image: linear-gradient(120deg, #3498db, #8e44ad);
      color: #fff;
      letter-spacing: 1px;
    }

    tr:nth-child(even) {
      background-color: #f8f9fa;
    }

    tr:nth-child(odd) {
      background-color: #fff;
    }

    .btn {
      display: inline-block;
      padding: 8px 12px;
      cursor: pointer;
      border-radius: 4px;
      margin-right: 4px;
      transition: all 0.3s ease;
    }

    .btn-success {
      background-color: #28a745;
      color: #fff;
      border: none;
    }

    .btn-success:hover {
      background-color: #218838;
    }

    .btn-danger { 
      background-color: #e74c3c;
      color: #fff;
      border: none;
    }

    .btn-danger:hover {
      background-color: #c0392b;
    }

    @media only screen and (max-width: 600px) {
      th:nth-child(4), td:nth-child(4),
      th:nth-child(5), td:nth-child(5) {
        display: none;
      }
    }

    </style>
  </head>
  <body>
    <table style="width:100%">
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Specialized</th>
        <th>Pending status</th>
        <th>Date create</th>
        <th>Action</th>
      </tr>
      {{#each data}}
        <tr>
          <td>{{name}}</td>
          <td>{{email}}</td>
          <td>{{specialized.specializedName}}</td>
          <td>{{isPending}}</td>
          <td>{{dateCreate}}</td>
          <td>
            <form action="/admin/studentPending/approve/{{this._id}}" >
              <button type="submit" class="btn btn-success">Approve</button>
            </form>
            <form action="/admin/deleteStudent/{{_id}}" >
              <button type="submit" class="btn btn-danger">Delete</button>
            </form>
          </td>
        </tr>
      {{/each}}
    </table>
  </body>
</html>
