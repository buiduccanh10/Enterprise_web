<html>
  <head>
    <title>Guest account</title>
   <style>
  table {
    border-collapse: separate;
    border-spacing: 0;
    width: 100%;
    margin-top: 20px;
    border-radius: 6px;
    overflow: hidden;
    box-shadow: 0 8px 20px rgba(0,0,0,0.1);
  }

  th, td {
    padding: 12px 15px;
    text-align: center;
  }

  th {
    background-image: linear-gradient(120deg, #3498db, #8e44ad);
    color: #fff;
    letter-spacing: 1px;
  }

  tr:nth-child(even) {
    background-color: #f8f9fa;
  }

  tr:nth-child(odd) {
    background-color: #fff;
  }

  .btn {
    display: inline-block;
    padding: 8px 12px;
    cursor: pointer;
    border-radius: 4px;
    margin-right: 4px;
    transition: all 0.3s ease;
  }

  .btn-primary { 
    background-color: #3498db;
    color: #fff;
    border: none;
  }

  .btn-primary:hover {
    background-color: #2874a6;
  }

  .btn-danger { 
    background-color: #e74c3c;
    color: #fff;
    border: none;
  }

  .btn-danger:hover {
    background-color: #c0392b;
  }

  form {
    display: inline; 
  }
</style>
  </head>
  <body>
    <table style="width:100%">
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Email</th>
        <th>Specialized</th>
        <th>Action</th>
      </tr>
      {{#each data}}
        <tr>
          <td>{{_id}}</td>
          <td>{{name}}</td>
          <td>{{email}}</td>
          <td>{{specialized.specializedName}}</td>
          <td>
            <form action="/admin/editGuest/{{_id}}">
              <button type="submit" class="btn btn-primary">Edit</button>
            </form>
            <form action="/admin/deleteGuest/{{_id}}" >
              <button type="submit" class="btn btn-danger">Delete</button>
            </form>
          </td>
        </tr>
      {{/each}}
    </table>
  </body>
</html>