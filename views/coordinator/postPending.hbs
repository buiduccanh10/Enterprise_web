<html>
  <head>
    <title>Post pending</title>
  </head>
  <body>
    <style>
    .pPendingContainer {
      width: 100%; /* Adjust as needed */
    }
    /* Add any other CSS styles you need */
  </style>

    <div class="pPendingBG">
      <div class="pPendingContainer">
        {{#each data}}
          <div class="pPendingItems">
            <div class="pPendingItemsBox1">
              <div class="pPendingItemsBox1n1">
                <h1>{{post.description}}</h1>
                <h5>By: {{post.email}}</h5>
              </div>
              <div class="pPendingItemsBox1n2">
                {{post.dateCreate}}
              </div>
            </div>
            
            <div class="pPendingContent">
            </div>

            <div class="pPendingItemsBox3">
              <a class="pPendingRead" href="/coordinator/readPost/{{post._id}}">Read more</a>
            </div>

            {{#if empty}}
              <div class="comment">
                <h1>No message</h1>
              </div>
            {{else}}
            <!--
                    <div class="card ">
                    <div class="media mb40">
                        <i class="d-flex mr-3 fa fa-user-circle-o fa-3x"></i>
                        <div class="media-body">
                            <h5 class="mt-0 font400 clearfix">
                              <a class="float-right">{{this.datetime}}</a>
                              {{this.email}}</h5>{{this.comment}}</div>
                    </div>
                    </div>
            -->
  


              <div class="comment">
                  {{{breaklines post.message}}}
              </div>
            {{/if}}
          <form class="messageBox" action="/coordinator/postPending/message/{{post._id}}" method="post">
              <input class="messText" name="message" type="text" placeholder="Write message">
              <button class="messButton" type="submit">Send</button>
         </form>
            
            <div class="pPendingItemsBox2">

              <form class="pPendingItemsForm1" action="/coordinator/postPending/approvePost/{{post._id}}" method="get">
                <button type="submit" class="pPendingItemsButton1 btn btn-success">Accept</button>
              </form>
              <form class="pPendingItemsForm1" action="/coordinator/postPending/deletePost/{{post._id}}">
                <button type="submit" class="pPendingItemsButton1 btn btn-danger">Refuse</button>
              </form>
            </div>
          </div>
        {{/each}}
      </div>
    </div>
  </body>
</html>