<html>
  <head>
    <title>Post approved</title>
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
    />
    <style>

    </style>
  </head>
  <body>




    <div class="pApprovedBG">
      <table class="pApprovedTable " style="width:100%; ">
        <tr>
          <th>Title</th>
          <th>Author</th>
          <th>Date</th>
          <th>Action</th>
        </tr>
        {{#each data}}
          <tr>

            <td style="width:50% ">{{title}}</td>
            <td style="width:20% ">{{email}}</td>
            <td style="width:20% ">{{dateCreate}}</td>
            <td style="width:10% ">
              <div class="pApprovedBox1">
                <form
                  action="/coordinator/readPost/{{_id}}"
                  method="get"
                >
                  <button type="submit" class="pApprovedButton btn btn-primary">Read</button>
                </form>
                <form
                  action="/coordinator/postApproved/unApprovePost/{{_id}}"
                  method="get"
                >
                  <button type="submit" class="pApprovedButton btn btn-success">Unapprove</button>
                </form>
                <form action="/coordinator/postApproved/deletePost/{{_id}}">
                  <button type="submit" class="pApprovedButton btn btn-danger">Delete</button>
                </form>
              </div>
              
            </td>
          </tr>
        {{/each}}
      </table>
    </div>



  </body>
</html>