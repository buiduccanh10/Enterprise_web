<div class="rpPendingBG">
<div class="rpPendingContainer">
{{#each report}}
<div class="rpPendingItems">
  <h1>Report post: {{post.title}}</h1>

    <div class="rpPendingItemsBox1">
      <div class="rpPendingItemsBox1n1">
        <div class="rpPendingSourch">
          <h4>Post by:</h4>
          <h4>{{post.email}}</h4>
        </div>
        <div class="rpPendingRead">
          <a href="/readPost/{{post._id}}">View post</a>
        </div>

        <div class="rpPendingSourch">
          <h4>Report by: </h4>
          <h4>{{email}}</h4>
        </div>
      </div>
      <div class="rpPendingItemsBox1n2">
        {{dateCreate}}
      </div>
    </div>
    <p class="rpPendingContent">Report content: {{content}}</p>
    <div class="status">
        
        {{#if isPending}}
          <h5>Approve status: Pending</h5>
          <div style="margin-top: 20px;">
            <h5>Comment from coordinator:  </h5>
            <p> {{comment}}</p>

          </div>
        {{else}}
          <h5>Approve status: Approved</h5>
        {{/if}}
    </div>
    
    <div class="rpPendingItemsBox2">
              {{#if isPending}}
                <form action="/student/editReport/{{_id}}" method="get">
                  <button class="action-btn edit">Edit report</button>
                </form>
                <form action="/student/deleteReport/{{_id}}" method="get">
                  <button class="action-btn del">Delete report</button>
                </form>
              {{else}}
                <button class="action-btn edit" disabled  style="opacity: 0.5;">Edit report</button>
                <button class="action-btn del" disabled  style="opacity: 0.5;">Delete report</button>
              {{/if}}
    </div>
    

</div>
{{/each}}


</div>
</div>







