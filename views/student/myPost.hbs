


<div class="container" style="margin-top: 20px;">
    <div class="grid">
        {{#if post}}
        {{#each post}}
        <div class="card">
            <div class="header">
                <h1>{{myPost.description}}</h1>
                <!--
                <h5>By: {{email}}</h5>
                -->
                <h5>At: {{myPost.dateCreate}}</h5>
            </div>
           
            <div class="actions">
                <a class="pPendingRead" href="/student/readPost/{{myPost._id}}">Read more</a>
            </div>
          <div class="status">
            {{#if myPost.isPending}}
              Approve status: <h5 style="color: red;">Pending</h5>
            {{else}}
              Approve status: <h5 style="color: green;">Approved</h5>
            {{/if}}
          </div>
        </div>
         
        {{/each}}
        {{else}}
        <div class="noPost">
        <img class="noPostImage"
        src="https://cdn.discordapp.com/attachments/1146127098503762031/1232279404051435530/You_have_no_post._1.png?ex=6628e120&is=66278fa0&hm=601453087d3a3a142a1fe39c2d9a1550c453cc78d4524405278dbecd48a9d728&" alt="">
        </div>
        {{/if}}
    </div>
</div>
<style>
.noPost {
  display: flex;
  justify-content: center;
}
.noPostImage {
  width: 50%;
  height: auto;
}
</style>