<div class="container" style="margin-top: 20px;">
    <div class="grid">
        {{#each post}}
        <div class="card">
            <div class="header">
                <h1>{{title}}</h1>
                <h5>By: {{email}}</h5>
                <h5>At: {{dateCreate}}</h5>
            </div>
            <div class="content">
                {{{body}}}
            </div>
            <div class="actions">
                <a class="pPendingRead" href="/readPost/{{_id}}">Read more</a>
            </div>
          <div class="status">
            {{#if isPending}}
              <h5>Approve status: <b style="font-size: 15px"><span style="color: red;">Pending</span></b></h5>
            {{else}}
              <h5>Approve status: <b style="font-size: 15px"><span style="color: green;">Approved</span></b></h5>
            {{/if}}
          </div>
        </div>
        {{/each}}
    </div>
</div>




